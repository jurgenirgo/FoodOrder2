<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HasilPemesanan">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--header-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hasil Pemesanan"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="18dp"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"/>

        <!--awal card-->
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:id="@+id/txtIdPesanan"
                    android:layout_marginBottom="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="Id Pesanan"/>

                <TextView
                    android:id="@+id/txtNamaPemesan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="Nama Pemesan : "/>

                <TextView
                    android:id="@+id/txtMejaPemesan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="Meja Pemesan : "/>

                <!--//pemesanan-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pemesanan"
                    android:paddingTop="10dp"
                    android:textSize="14sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtPesanan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ayam Goreng x 4, Total = 40000\nBurger x 6, Total = 30000"/>

                <!--total harga-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total harga"
                    android:paddingTop="10dp"
                    android:textStyle="bold"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/txtTotalPembayaran"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="Total Pembayaran : "/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <!--checkbox pesanan sudah benar-->
        <CheckBox
            android:id="@+id/cb_setuju_pesan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pesanan sudah benar"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:textColor="@color/colorText"
            android:textColorHint="@color/colorAccent"/>

        <!--button kirim-->
        <Button
            android:id="@+id/btn_kirimPesanan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="Kirim"
            android:textColor="@android:color/white"
            android:background="@drawable/rounded_shape"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:backgroundTint="@color/buttonSend"/>
    </LinearLayout>
</ScrollView>